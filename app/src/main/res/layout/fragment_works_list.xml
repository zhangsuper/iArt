<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_EFF1F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/condition_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/condition_type_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_14">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_16">
                <TextView
                    android:id="@+id/hot_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/works_type_hot"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_141414"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/hot_tab_indicator"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@color/color_141414"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_36">

                <TextView
                    android:id="@+id/new_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/works_type_new"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_888888"/>

                <View
                    android:id="@+id/new_tab_indicator"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@color/color_141414"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/condition_type_view">

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/works_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/condition_view">

        <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/works_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>