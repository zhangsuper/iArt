<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_conner_8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:textSize="@dimen/font_17"
        android:textColor="@color/color_141414"
        android:textStyle="bold"
        android:text="图单名称"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:textColorHint="@color/color_CCCCCC"
        android:textColor="@color/color_141414"
        android:textSize="@dimen/font_14"
        android:paddingHorizontal="@dimen/font_10"
        android:background="@drawable/bg_white_stroke_dddddd_conner_6"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_18"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/et_name">

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/font_16"/>

        <View
            android:layout_width="@dimen/dp_05"
            android:layout_height="match_parent"
            android:background="@color/color_EEEEEE"/>

        <TextView
            android:id="@+id/sure_btn"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textStyle="bold"
            android:textColor="@color/color_141414"
            android:textSize="@dimen/font_16"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        android:background="@color/color_EEEEEE"/>

</androidx.constraintlayout.widget.ConstraintLayout>