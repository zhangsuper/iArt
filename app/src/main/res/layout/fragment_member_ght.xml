<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pay_button">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/price_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_4"
                app:layout_constraintTop_toTopOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <LinearLayout
                android:id="@+id/vip_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/price_recycler_view">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52"
                        android:gravity="center"
                        android:text="国画通会员"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_16"
                        android:textColor="@color/color_141414"
                        android:background="@drawable/bg_faba97_conner_8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52"
                        android:gravity="center"
                        android:text="浏览所有国画"
                        android:textColor="@color/color_141414"
                        android:background="@color/color_FFE5D7" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52"
                        android:gravity="center"
                        android:text="高级检索"
                        android:background="@color/color_FFF5F0"
                        android:textColor="@color/color_141414" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52"
                        android:gravity="center"
                        android:text="高清版下载"
                        android:textColor="@color/color_141414"
                        android:background="@drawable/bg_ffe5d7_conner_8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52"
                        android:gravity="center"
                        android:text="普通用户"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_16"
                        android:textColor="@color/color_141414"
                        android:background="@drawable/bg_d4d4d4_conner_8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52"
                        android:gravity="center"
                        android:text="浏览部分国画"
                        android:background="@color/color_F3F3F3"
                        android:textColor="@color/color_141414" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52"
                        android:gravity="center"
                        android:text="普通检索"
                        android:background="@color/color_FFFFFFFF"
                        android:textColor="@color/color_141414" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52"
                        android:gravity="center"
                        android:text="无法下载"
                        android:textColor="@color/color_141414"
                        android:background="@drawable/bg_f3f3f3_conner_8" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pay_type_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/vip_info"
                android:background="@drawable/bg_white_conner_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/wechat_pay_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56">

                    <ImageView
                        android:id="@+id/iv_wechat_pay"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:src="@drawable/icon_wechat_pay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/black"
                        android:text="微信支付"
                        app:layout_constraintLeft_toRightOf="@+id/iv_wechat_pay"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/iv_wechat_pay_selected"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginRight="@dimen/dp_16"
                        android:src="@drawable/check_box_selected" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_1a000000"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:visibility="gone" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ali_pay_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_ali_pay"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:src="@drawable/icon_ali_pay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/black"
                        android:text="支付宝支付"
                        app:layout_constraintLeft_toRightOf="@+id/iv_ali_pay"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/iv_ali_pay_selected"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginRight="@dimen/dp_16"
                        android:src="@drawable/check_box_unselected" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/pay_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="立即开通"
        android:textSize="@dimen/font_16"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/bg_de824e_faba97_conner_24"
        app:layout_constraintBottom_toTopOf="@+id/agreement_view" />

    <LinearLayout
        android:id="@+id/agreement_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyCheckBox" />


        <TextView
            android:id="@+id/agreement_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意《会员服务协议》"
            android:layout_marginLeft="@dimen/dp_4"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>